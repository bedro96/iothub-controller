// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  username           String              @unique
  email              String              @unique
  password           String
  role               String              @default("user")
  emailVerified      Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  sessions           Session[]
  passwordResetTokens PasswordResetToken[]
  devices            Device[]
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  token        String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model Device {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  type        String
  status      String   @default("offline")
  userId      String   @db.ObjectId
  uuid        String?  @unique
  connectionStatus String @default("disconnected")
  metadata    Json?
  lastSeen    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceMappings DeviceMapping[]
  deviceCommands DeviceCommand[]
  
  @@index([userId])
  @@index([status])
}

model AuditLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  action    String
  userId    String?  @db.ObjectId
  userEmail String?
  ipAddress String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

model DeviceMapping {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  uuid      String   @unique
  deviceId  String   @db.ObjectId
  userId    String   @db.ObjectId
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  
  @@index([deviceId])
  @@index([userId])
}

model DeviceCommand {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId   String?  @db.ObjectId
  uuid       String?
  command    String
  payload    Json?
  status     String   @default("pending")
  broadcast  Boolean  @default(false)
  userId     String   @db.ObjectId
  response   Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  device     Device?  @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  
  @@index([deviceId])
  @@index([uuid])
  @@index([userId])
  @@index([status])
}

model DeviceId {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId  String   @unique
  deviceUuid String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("deviceids")
}

model Telemetry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId  String
  type      String?
  modelId   String?
  status    String?
  temp      Float?
  humidity  Float?
  ts        String?
  createdAt DateTime @default(now())
  
  @@index([deviceId])
  @@index([createdAt])
  @@map("telemetries")
}
