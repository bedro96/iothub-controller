# Database
# For local MongoDB:
DATABASE_URL="mongodb://localhost:27017/iothub-controller"
# For MongoDB Atlas:
# DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/iothub-controller"

# JWT Secret (generate a secure random string)
JWT_SECRET="your-secure-jwt-secret-key-change-this-in-production"

# Internal Service Token (for bypassing rate limits from trusted services)
INTERNAL_SERVICE_TOKEN="your-internal-service-token"

# Environment
NODE_ENV="development"

# Logging Level (error, warn, info, http, debug)
LOG_LEVEL="info"

